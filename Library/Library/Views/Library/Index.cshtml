@model Library.Models.LibrarySearch

@{
    ViewBag.Title = "Index";
}

<h2>圖書維護</h2>

@using (Html.BeginForm("Index", "Library", FormMethod.Post, new { id = "Search" }))
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.BookName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.BookName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookClassId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BookClassId, (List<SelectListItem>)ViewBag.BookClassData, "請選擇", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookUserId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BookUserId, (List<SelectListItem>)ViewBag.BookUserData, "請選擇", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookStatusId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.BookStatusId, (List<SelectListItem>)ViewBag.BookStatusData, "請選擇", new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <input class  ="btn btn-dark"type="submit" value="查詢" />
                @Html.ActionLink("新增書本", "InsertBook")
                @Html.ActionLink("清除表格", "Index")
            </div>
        </div>
        @if (ViewBag.SearchResult != null)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>圖書類別</th>
                        <th>書名</th>
                        <th>購書日期</th>
                        <th>借閱狀態</th>
                        <th>借閱人</th>
                        <td colspan="3"></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (List<Library.Models.Library>)ViewBag.SearchResult)
                    {
                        <tr id='@item.BookId'>
                            <td>@item.BookClass</td>
                            <td>@item.BookName</td>
                            <td>@item.BookBuydate</td>
                            <td>@item.BookStatus</td>
                            <td>@item.BookUser</td>
                            <td>
                                 <button type="button" class="DataButton btn btn-info">借閱紀錄</button>
                                 <input class="hidBookId" type="hidden" value='@item.BookId' />
                                
                            </td>

                            <td>
                                <button type="button" class="btnDelete btn btn-info">刪除</button>
                                <input class="hidBookId" type="hidden" value='@item.BookId' />
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $(".DataButton").click(function (e) {
            e.preventDefault();
            var tr = $(this).closest('tr')
            location.href = "/Library/Data?BookId=" + $(this).next().val();
            //$.ajax({
            //    type: "POST",
            //    url: "/Library/Data",
            //    data: "BookId=" + $(this).next().val(),
            //    dataType: "json"
            //});
            return false;
        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".btnDelete").click(function (e) {
            e.preventDefault();
            var tr = $(this).closest('tr')
            $.ajax({
                type: "POST",
                url: "/Library/DeleteBook",
                data: "BookId=" + $(this).next().val(),
                dataType: "json",
                success: function (response) {
                    $(tr).remove();
                }, error: function (error) {
                    alert("系統發生錯誤");
                }
            });
            return false;
        });
    });
</script>